<div class="container">
  <div class="bg-1 mt-5 p-4">
    <div class="mt-2 ml-2">
      <h3>Let’s Packing!</h3>
      <p>Pack Pack Pack</p>
    </div>
      <div class="my-3">
        <!--タイトルフォーム-->
        <%= form_with model: @pack, url: packs_path do |f| %>
          <i class="fa-solid fa-bookmark"></i>
          <%= f.text_field :pack_title, placeholder: "Title" %>
        <% end %>
      </div>
      <div class="bg-2 p-4">

        <!--アイテム追加-->
        <h4>Item</h4>
         <%= form_with model: @item, url: items_path, method: :post do |f| %>
          <%= f.text_field :item, placeholder: "Item" %>
          <%= f.submit "add!" , class: 'btn btn-info rounded-pill btn-sm' %>
        <% end %>

      <div class="mt-3">
        <%#= @items.each do |item| %>
          <%#= item.item %>
        <%# end %>
      </div>
    </div>
  </div>
</div>
