<div class="container">
  <div class="bg-1 mt-5 p-4">
    <div class="mt-2 ml-2">
      <h3>Let’s Packing!</h3>
      <p>Pack Pack Pack</p>
    </div>
     <div class="my-4">
        <!--タイトルフォーム-->
        <%= form_with model: @pack do |f| %>
          <i class="fa-solid fa-bookmark"></i>
          <%= f.text_field :pack_title, placeholder: "List Title" %>
        <% end %>
      </div>
    <div class="bg-2 p-4">
      <!--アイテム追加-->
      <h4>Packing Item</h4>
       <%= form_with model: @item, url: packs_path, method: :post do |f| %>
        <%= f.text_field :item, placeholder: "Item" %>
        <%= f.submit "add!" , class: 'btn btn-info rounded-pill btn-sm' %>
      <% end %>
      <hr>
      <div class="mt-3">


        <% @items.each do |item| %>
          <div class="row">

            <h5 class="col-md-3 ml-3">
            <%= item.item %>
            </h5>
            <div class="col-md-1">
              <!--下書き編集-->
              <%#= link_to edit_pack_path(@item) do %>
                <i class="fa-solid fa-pen-to-square"></i>
              <%# end %>
            </div>
            <div class="col-md-1">
              <!--下書き削除-->
              <%= link_to pack_path(item.id), method: :delete do %>
                <i class="fa-solid fa-trash"></i>
              <% end %>
            </div>
          </div>
        <% end %>


      </div>
    </div>
  </div>
  <div>
    <% @packs.each do |pack| %>
      <%= pack.title %>
      <%= pack.created_at.strftime('%Y/%m/%d') %>
    <% end %>
  </div>
</div>