<div class="container">
  <div class="mt-5">
    <h3>Let’s Packing!</h3>
    <p>Pack Pack Pack</p>
  </div>
  <div class="mt-5">
    <!--タイトルフォーム-->
    <%= form_with model: @pack, url: packs_path do |f| %>
      <i class="fa-solid fa-bookmark"></i>
      <%= f.text_field :pack_title, placeholder: "Title" %>
    <% end %>
  </div>
  <div class="mt-5">
    <!--アイテム追加-->
    <h4>Item</h4>
     <%= form_with model: @item, url: items_path, method: :post do |f| %>
      <%= f.text_field :item, placeholder: "Item" %>
      <%= f.submit "add!" %>
    <% end %>
  </div>
  <div class="mt-3">
    <%#= @items.each do |item| %>
      <%#= item.item %>
    <%# end %>
  </div>

</div>
