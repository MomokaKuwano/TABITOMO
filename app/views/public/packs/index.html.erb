<div class="container">
  <div class="row">
    <div class="col-md-9">
      <div class="bg-1 mt-5 p-4">
        <div class="mt-2 ml-2">
          <h3>Let’s Packing!</h3>
          <p>Pack Pack Pack</p>
        </div>
        <div class="my-4">
          <!--タイトルフォーム-->
          <%= form_with model: @pack, id: "pack-title" do |f| %>
            <i class="fa-solid fa-bookmark"></i>
            <%= f.text_field :pack_title, placeholder: "List Title" %>
          <% end %>
        </div>
        <div class="bg-2 p-4">
          <!--アイテム追加-->
          <h4>Packing Item</h4>
          <%= form_with model: @item do |f| %>
            <%= f.text_field :name, placeholder: "Item" %>
            <%= f.submit "add!" , class: 'btn btn-info rounded-pill btn-sm' %>
          <% end %>
          <hr>
          <div class="mt-3">
            <% @items.each do |item| %>
            <div class="d-flex align-items-center mb-2">
              <%= form_with model: item, method: :patch, class: 'd-flex w-100' do |f| %>
                <%= f.text_field :name, class: 'form-control' %>
                <%= button_tag type: 'submit', class: 'btn btn-default' do %>
                  <i class="fa-solid fa-pen-to-square"></i>
                <% end %>
              <% end %>
              <%= link_to item_path(item.id), method: :delete do %>
                <i class="fa-solid fa-trash"></i>
              <% end %>
            </div>
            <% end %>
          </div>
          <% if @items.count > 0 %>
          <div class="d-flex justify-content-center mt-4">
            <%= button_tag type: 'submit', form: 'pack-title', class: 'btn btn-default btn-info rounded-pill' do %>
              List Create!
            <% end %>
          </div>
          <% end %>
        </div>
      </div>
    </div>
    <div class="col-md-3 mt-3">
      <div>
        <% @packs.each do |pack| %>
          <%= pack.title %>
          <%= pack.created_at.strftime('%Y/%m/%d') %>
        <% end %>
      </div>
    </div>
  </div>
</div>