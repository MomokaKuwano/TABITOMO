<div class="container">
  <div class="mt-5 mb-2">
    <h3>Edit Profile</h3>
    <div class="mt-5">
      <%= form_with model: @user, method: :patch do |f| %>
      <div class="row">
        <div class="col-md-4 mb-2">
          <!--プロフィール写真※必須ではない-->
          <%= f.label :image, "ProfileImage", class: "col-form-label" %>
          <%= f.file_field :image, accept: "form-control" %>
        </div>
      </div>
      <div class="row">
        <div class="col-md-4 mb-2">
          <!--名前-->
          <%= f.label :name, "Name", class: "col-form-label" %>
          <%= f.text_field :name, class: "form-control" %>
        </div>
      </div>
      <div class="row">
        <div class="col-md-4 mb-2">
          <!--住んでいる国※必須ではない-->
          <%= f.label :country, "Country", class: "col-form-label" %>
          <%= f.text_field :country, class: "form-control", accept: "image/*" %>
        </div>
      </div>
      <div class="row">
        <div class="col-md-4 mb-2">
          <!--ひと言-->
          <%= f.label :one_word, "One word", class: "col-form-label" %>
          <%= f.text_field :one_word, class: "form-control" %>
        </div>
      </div>

      <div class="mt-2">
          <%= f.submit "編集内容を保存", class: "btn btn-info" %>
          <% end %>
      </div>
      <div class="mt-2">
        <%= link_to "退会する", unsubscribe_path, method: :patch, class: "btn btn-danger", "data-confirm" => "Are you sure?" %>
      </div>

    </div>
  </div>
</div>