<div class="container">
  <div class="row">
    <div class="col-md-9">
      <div class="bg-1 mt-5 p-4">
        <div class="mt-2 ml-2">
          <h3>Edit Profile</h3>
        </div>
        <div class="mt-4">
          <div class="bg-2 p-4">
            <%= form_with model: @user, method: :patch do |f| %>
            <div class="row">
              <div class="col-md-4 mb-2">
                <!--プロフィール写真※必須ではない-->
                <%= f.label :profile_image, "ProfileImage", class: "col-form-label" %>
                <%= f.file_field :profile_image, accept: "form-control" %>
              </div>
            </div>
            <div class="row">
              <div class="col-md-4 mb-2">
                <!--名前-->
                <%= f.label :name, "Name", class: "col-form-label" %>
                <%= f.text_field :name, class: "form-control" %>
              </div>
            </div>
            <div class="row">
              <div class="col-md-4 mb-2">
                <!--住んでいる国※必須ではない-->
                <%= f.label :country, "Country", class: "col-form-label" %>
                <%= f.text_field :country, class: "form-control", accept: "image/*" %>
              </div>
            </div>
            <div class="row">
              <div class="col-md-4 mb-2">
                <!--ひと言-->
                <%= f.label :one_word, "One word", class: "col-form-label" %>
                <%= f.text_field :one_word, class: "form-control" %>
              </div>
            </div>

            <div class="mt-2">
                <%= f.submit "Update", class: "btn btn-info" %>
                <% end %>
            </div>
            <div class="mt-2 text-white">
              <%= link_to "Withdrawal", unsubscribe_path, method: :patch, class: "btn btn-danger", "data-confirm" => "Are you sure?" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>