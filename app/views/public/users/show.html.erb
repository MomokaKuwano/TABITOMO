<div class="container">
  <div class="mt-5 mb-2">
    <div class="row">
      <div class="col-md-2 pr-0">
        <!--ユーザー画像-->
        <%= image_tag @user.get_profile_image(100,100), class: "rounded-circle" %>
      </div>
      <div class="col-md-10 px-0">
        <h3>
          <%= @user.name %>
          <%= link_to edit_user_path(@user.id) do %>
          <i class="fa-solid fa-pen-to-square fa-sm"></i>
          <% end %>
        </h3>
        <div>
          <i class="fa-solid fa-location-dot"></i>
          <%= @user.country %>
        </div>
        <div>
          <%= @user.one_word %>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
      <div class="col-9 mt-3">
        <h4>
          My Plan
        </h4>
        <div class="row row-cols-1 row-cols-md-3 g-4">
          <% @posts.each do |post| %>
           <div class="col">
             <div class="my-2">
              <div class="card bg-dark text-white">
                <!--投稿画像-->
                <img src="https://picsum.photos/200/250" class="card-img" >

                <div class="card-img-overlay">
                  <h5 class="card-title">
                    <!--投稿タイトル-->
                    <%= link_to post.title, post_path(post) %>
                  </h5>
                  <div class="row">
                    <div class="col-4 mt-2 pr-0">
                      <!--コメント数-->
                      <i class="fa-regular fa-comment fa-lg"></i>
                      <%= post.comments.count %>
                    </div>
                    <div class="col-8 mt-2 p-0">
                      <!--お気に入り-->
                      <i class="fa-regular fa-heart fa-lg"></i>
                      <%= post.likes.count %>
                    </div>
                  </div>
                </div>
                
              </div>
            </div>
          </div>
          <% end %>
        </div>
      </div>
      <div class="col-md-3">
        <h4 class="mt-3">
          Schedule
        </h4>
        <%# @users.each do |user|%>
          <div class="mb-3">
            <%#= image_tag user.get_profile_image(70,70), class: "rounded-circle" %>
            <%#= user.name %>
          </div>
        <%# end %>
      </div>
    </div>

</div>
