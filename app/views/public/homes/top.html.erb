<div class="container">

  <div class="row">
    <div class="col-md-6 mt-5">

      <h3>
        Hello,
        <% if user_signed_in? %>
          <%= @user.name %> !
        <% else %>
          Traveler!
        <% end %>
      </h3>
      <p>
        Welcome back and explore the world
      </p>
    </div>

    <div class="col-md-5 mt-5">
      <form class="d-flex">
        <input class="form-control mr-2" type="search" placeholder="Spot" aria-label="Search">
        <button class="btn btn-outline-info" type="submit">Search</button>
      </form>
    </div>
  </div>

    <div class="row">
      <div class="col-9 mt-3">
        <h4>Trip Plan</h4>
          <div class="row row-cols-1 row-cols-md-3 g-4">
          <% @posts.each do |post| %>
           <div class="col">
             <div class="my-2">
              <div class="card bg-dark text-white">
                <!--投稿画像-->
                <img src="https://picsum.photos/200/250" class="card-img" >

                <div class="card-img-overlay">
                  <h5 class="card-title">
                    <!--投稿タイトル-->
                    <%= link_to post.title, post_path(post) %>
                  </h5>

                  <div class="row">
                    <div class="col-4 mt-2 pr-0">
                      <!--コメント数-->
                      <i class="fa-regular fa-comment fa-lg"></i>
                      <%= post.comments.count %>
                    </div>
                    <div class="col-8 mt-2 p-0">
                      <!--お気に入り-->
                      <i class="fa-regular fa-heart fa-lg"></i>
                      <%= post.likes.count %>
                    </div>
                  </div>

                </div>
              </div>
            </div>
          </div>
          <% end %>
        </div>
      </div>
      <div class="col-md-3">
        <h4 class="mt-3">
          User
        </h4>
        <!--ユーザー検索-->
          <%= form_with url: root_path, method: :get, local: true do |f| %>
          <%= f.text_field :name, class: "form-control", type: "search", placeholder: "User Name" %>
          <%= f.submit :search, class: "btn btn-outline-info" %>
        <% end %>
        <h5 class="mt-4">
          Name
        </h5>
        <!--ユーザー一覧-->
        <% @users.each do |user|%>
          <div class="mb-3">
            <%= image_tag user.get_profile_image(70,70), class: "rounded-circle" %>
            <%= user.name %>
          </div>
        <% end %>
      </div>
    </div>
</div>